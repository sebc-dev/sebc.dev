{
  "name": "sebc.dev",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler types && astro dev",
    "build": "wrangler types && astro check && astro build && pagefind --site dist",
    "preview": "astro build && wrangler pages dev dist",
    "typecheck": "astro sync && astro check && tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:content": "markdownlint-cli2 'src/content/**/*.{md,mdx}'",
    "check": "astro check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mutation": "npx stryker run",
    "test:e2e": "playwright test",
    "knip": "knip",
    "deploy": "npm run build && wrangler pages deploy dist --project-name=sebc-dev"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.1",
    "astro-expressive-code": "^0.41.6",
    "hastscript": "^9.0.1",
    "rehype-autolink-headings": "^7.1.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/vitest-runner": "^9.5.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "knip": "^5.83.1",
    "lefthook": "^2.1.0",
    "markdownlint-cli2": "^0.20.0",
    "pagefind": "^1.4.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.63.0"
  }
}
