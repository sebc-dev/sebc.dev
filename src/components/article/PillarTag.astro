---
import { getPillarColorClass, type PillarType } from "@/lib/pillarTags";

interface Props {
  pillar: PillarType;
  class?: string;
}

const { pillar, class: className } = Astro.props;
const colorClass = getPillarColorClass(pillar);
---

<span
  class:list={[
    "inline-flex items-center text-xs font-code px-2.5 py-1 rounded-xs border",
    colorClass,
    className,
  ]}
>
  {pillar}
</span>
