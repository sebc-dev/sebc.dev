---
interface Props {
  pillar: "IA" | "Ingénierie" | "UX";
  class?: string;
}

const { pillar, class: className } = Astro.props;

// Normalize pillar for comparison (handle both "Ingénierie" and "Ingenierie")
const normalizedPillar = pillar
  .normalize("NFD")
  .replace(/[\u0300-\u036f]/g, "");

const pillarClasses = {
  IA: "bg-purple-500/15 border-purple-500/30 text-purple-400",
  Ingenierie: "bg-teal/15 border-teal/30 text-teal-bright",
  UX: "bg-amber-500/15 border-amber-500/30 text-amber-400",
} as const;

// Map to get the correct class
const colorClass =
  normalizedPillar === "Ingenierie"
    ? pillarClasses.Ingenierie
    : pillarClasses[pillar as keyof typeof pillarClasses];
---

<span
  class:list={[
    "inline-flex items-center text-xs font-code px-2.5 py-1 rounded-xs border",
    colorClass,
    className,
  ]}
>
  {pillar}
</span>
