---
import Nav from "@/components/layout/Nav.astro";
import LangSwitch from "@/components/layout/LangSwitch.astro";
import { getLangFromUrl } from "@/i18n/utils";

interface Props {
  translationMap?: Record<string, string>;
}

const { translationMap } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<header
  class="sticky top-0 z-50 bg-canvas/90 backdrop-blur-lg border-b border-border-subtle"
>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a
        href={`/${lang}`}
        class="flex items-center gap-2 group"
        aria-label="sebc.dev â€” Home"
      >
        <img
          src="/logos/logo_outline_color.svg"
          alt="sebc.dev logo"
          class="w-14 h-14"
        />
        <span
          class="hidden sm:inline text-lg font-semibold tracking-tight text-text-primary"
          >sebc.dev</span
        >
      </a>

      <div class="flex items-center gap-6">
        <Nav />
        <LangSwitch translationMap={translationMap} />
      </div>
    </div>
  </div>
</header>
