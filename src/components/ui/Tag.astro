---
interface Props {
  label: string;
  variant?: "default" | "active" | "badge";
  href?: string;
  class?: string;
}

const { label, variant = "default", href, class: className } = Astro.props;

const variantClasses = {
  default: "text-text-secondary border-border",
  active: "text-teal-bright border-teal/20 bg-teal-dim",
  badge: "text-teal bg-canvas/80 backdrop-blur-sm border-teal/20",
};

const baseClasses = "text-xs font-code px-2.5 py-1 rounded-xs border";
const hoverClasses =
  "hover:text-teal-bright hover:border-teal/40 transition-colors";
---

{
  href ? (
    <a
      href={href}
      class:list={[
        baseClasses,
        variantClasses[variant],
        hoverClasses,
        className,
      ]}
    >
      {label}
    </a>
  ) : (
    <span class:list={[baseClasses, variantClasses[variant], className]}>
      {label}
    </span>
  )
}
